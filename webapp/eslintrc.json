{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-underscore-dangle": [
            "off"
        ],
        "max-len": ["warn", 120, 2, { "ignoreComments": true, "ignoreTrailingComments": true }],
        "no-use-before-define": ["error", { "functions": false }]
    }
}